<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5"
        android:elevation="@dimen/dimen_5"
        app:cardCornerRadius="@dimen/dimen_5"
        app:cardPreventCornerOverlap="true"
        app:contentPadding="@dimen/dimen_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_6"
            android:layout_marginTop="@dimen/dimen_sp_21"
            android:layout_marginRight="@dimen/dimen_6"
            android:layout_marginBottom="@dimen/dimen_6">


            <ImageView
                android:id="@+id/ivAvatarImage"
                android:layout_width="@dimen/course_list_size"
                android:layout_height="@dimen/course_list_size"
                android:layout_marginTop="@dimen/dimen_14"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/dimen_14" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_3"
                android:layout_toRightOf="@+id/ivAvatarImage"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimary"
                android:layout_margin="@dimen/dimen_10"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="normal"
                tools:text="NAME" />
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_marginTop="@dimen/dimen_3"
                android:layout_toRightOf="@+id/ivAvatarImage"
                android:fontFamily="sans-serif"
                android:layout_margin="@dimen/dimen_10"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_18sp"
                android:textStyle="normal"
                android:visibility="visible"
                tools:text="USERNAME" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>